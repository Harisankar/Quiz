<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MobileQuiz.Views.AuthAccountView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Visual="Material"
    mc:Ignorable="d">
    <StackLayout>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Margin="20"
                HeightRequest="80"
                HorizontalOptions="Center"
                Source="{Binding Image}"
                WidthRequest="80" />

            <Label
                Grid.Row="1"
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="Autenticar Conta" />

            <StackLayout
                Grid.Row="2"
                Margin="0,50,0,50"
                Orientation="Vertical">

                <Entry
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Insira seu login"
                    PlaceholderColor="White"
                    Text="{Binding Login}"
                    TextColor="Default" />

                <Entry
                    IsPassword="True"
                    Placeholder="Insira sua senha"
                    Text="{Binding Password}"
                    TextColor="Default" />
            </StackLayout>

            <StackLayout Grid.Row="3" Orientation="Vertical">
                <Button Command="{Binding AuthCommand}" Text="Autenticar" />

                <Button
                    Command="{Binding AboutCommand}"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="False"
                    Text="Sobre" />
            </StackLayout>
        </Grid>

        <StackLayout Margin="20,50" VerticalOptions="EndAndExpand">
            <Label HorizontalOptions="Center" Text="Ainda nao possui uma conta?" />
            <Button
                Command="{Binding RegisterCommand}"
                Style="{StaticResource OutlinedButton}"
                Text="Registrar" />
        </StackLayout>
    </StackLayout>
</ContentPage>